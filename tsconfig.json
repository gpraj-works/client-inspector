{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "@/*": ["src/*"]
        },
        "resolveJsonModule": true,
        "sourceMap": false,
        "declaration": true,
        "strict": true,
        "target": "ESNext",
        "removeComments": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*.ts", "tests/**/*.test.ts"]
}
